#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int x,y;
        cin>>x>>y;
        if(x<=6)
        cout<<y<<endl;
        else 
        {
            int a=ceil(x/6.0);
            cout<<y*a<<endl;
        }
    }
	// your code goes here
	return 0;
}
