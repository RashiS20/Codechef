#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        string str="";
        if(n%2==0)
        {
            str+='1';
            for(int i=1;i<n-1;i++)
            {
                str+='0';
            }
            str+='1';
            
            
            cout<<str<<endl;
        }
        else if(n%2!=0)
        {
            str+='0';
            for(int i=1;i<n-1;i++)
            {
                str+='1';
            }
            str+='0';
            
            
            cout<<str<<endl;
        }
    }
    
    
	// your code goes here
	return 0;
}
