#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int n,co=0,ce=0;
        cin>>n;
        vector<int> arr(n);
        for(int i=0;i<n;i++)
        cin>>arr[i];
        if(n%2!=0)
        cout<<-1<<endl;
        else{
            for(int i=0;i<n;i++)
        {
            if(arr[i]==-1)
            co++;
            else
            ce++;
        
        }
        int d=abs(ce-co);
        cout<<d/2<<endl;
        }
    }
	// your code goes here
	return 0;
}
