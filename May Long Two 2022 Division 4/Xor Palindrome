#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        string arr;
       
        cin>>arr;
        double c=0;
         
       for(int i=0;i<n/2;i++)
        { 
            if(arr[i]!=arr[n-1-i])
            {
                    c++;
                }
            
            
        }
        cout<<ceil(c/2.0)<<endl;
    }
	// your code goes here
	return 0;
}
